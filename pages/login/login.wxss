.wrapper {
  height: 100vh;
  background: rgb(238,247,246);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wrapper .avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 14rpx solid rgb(252, 121, 77);
}
.wrapper .name {
  font-size: 28rpx;
  color: #ff6633;
  padding: 28rpx 24rpx 14rpx 24rpx;
  border-bottom: 4rpx solid #ff7f55be;
  margin-bottom: 68rpx;
}
.wrapper .textWrapper {
  display: flex;
  font-size: 24rpx;
  color: #fd6634be;
  margin-top: 36rpx;
}
.login-button::after {
  border: none;
}
.login-button {
  border-radius: 14rpx;
 
  font-size: 28rpx;
  background: linear-gradient(to bottom, #ffa84c 0%,#ff6633 49%); 
  color: #fff;
  box-shadow: 0px 4px 8px 0px #ddd;
  width: 320rpx;
}
.login-button.active {
  opacity: 0.8;
}
navigator.active {
  opacity: 0.8;
}
