
.container {
  background: rgb(246, 246, 246);
  height: 100vh;
  position: relative;
}
.item {
  height: 540rpx;
}
.list {
  margin: 26rpx 36rpx;
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0rpx;
  vertical-align: middle;
  
}
.list .select {
  width: 24rpx;
  height: 24rpx;
  border:  4rpx solid #ff6633;
  border-radius: 50%;
  margin: 4rpx 24rpx 0rpx 24rpx;
  
  
}
.list .select.active {
  position: relative;
}
.list .select.active::after {
  content: '';
  display: block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff6633;
  position: absolute;
  top: 6rpx;
  left: 6rpx;
}
.list .text {
}
.tomato-box {
  width: 100%;
  margin-top: 60rpx;
  padding: 0 28rpx;
  
}
.tomato-box .wrapper {
  background: rgb(238,247,246);
  box-shadow: 0px 4px 8px 0px #ddd;
  margin: 0rpx 24rpx 24rpx 24rpx;
  padding: 48rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

